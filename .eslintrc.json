{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-shadow": "off",
    "import/no-cycle": "off",
    "class-methods-use-this": "off",
    "guard-for-in": "off",
    "consistent-return": "off",
    "no-use-before-define": "off",
    "no-nested-ternary": "off",
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}